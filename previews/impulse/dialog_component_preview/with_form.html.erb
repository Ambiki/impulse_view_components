<%= render(Impulse::DialogComponent.new(title: "Edit profile")) do |c| %>
  <% c.with_trigger { "Edit profile" } %>
  <form>
    <%= render(Impulse::Dialog::BodyComponent.new) do %>
      <label for="name">Full name</label>
      <input type="text" id="name" class="form-control form-control-sm" autocomplete="off">
    <% end %>
    <%= render(Impulse::Dialog::FooterComponent.new) do %>
      <button type="reset" class="btn btn-secondary btn-sm" data-action="click->awc-dialog#hide">Cancel</button>
      <button type="submit" class="btn btn-primary btn-sm">Submit</button>
    <% end %>
  </form>
<% end %>
