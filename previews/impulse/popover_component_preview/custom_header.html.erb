<%= render(Impulse::PopoverComponent.new(title: "Delete")) do |c| %>
  <% c.with_trigger(class: "btn btn-primary") { "Toggle popover" } %>
  <% c.with_header(class: "d-flex align-items-center justify-content-between") do %>
    <span>Delete</span>
    <div>
      <button type="button" class="btn btn-sm"><i class="bi bi-pencil"></i></button>
      <button type="button" class="btn btn-sm"><i class="bi bi-people"></i></button>
      <button type="button" class="btn btn-sm" data-action="click->awc-popover#hide" data-autofocus><i class="bi bi-x-lg"></i></button>
    </div>
  <% end %>
  <% c.with_body do %>
    <span>Are you sure you want to delete this record? It cannot be undone.</span>

    <div class="mt-3 d-flex align-items-center justify-content-end">
      <button type="button" class="btn btn-sm btn-light" data-action="click->awc-popover#hide">Cancel</button>
      <button type="button" class="btn btn-sm btn-danger ml-2">Delete</button>
    </div>
  <% end %>
<% end %>
