<%= render(Impulse::PopoverComponent.new) do |c| %>
  <%= c.with_button(class: "btn btn-primary") { "Toggle popover" } %>
  <%= c.with_header do %>
    <span>Delete</span>
    <button type="button" class="close" aria-label="Close" data-action="click->awc-popover#hide">
      &times;
    </button>
  <% end %>
  <% c.with_body do %>
    <span>Are you sure you want to delete this record? It cannot be undone.</span>

    <div class="mt-3 d-flex align-items-center justify-content-end">
      <button type="button" class="btn btn-sm btn-light" data-action="click->awc-popover#hide">Cancel</button>
      <button type="button" class="btn btn-sm btn-danger ml-2" data-action="click->awc-popover#hide">Delete</button>
    </div>
  <% end %>
<% end %>
