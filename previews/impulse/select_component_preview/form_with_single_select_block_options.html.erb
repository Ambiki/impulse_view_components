<%= impulse_form_with model: Impulse::SelectComponentPreview::User.new(fruit_id: 1), url: "/users" do |f| %>
  <%= f.label :fruit_id, "Select a fruit" %>
  <%= f.select :fruit_id do |c| %>
    <% [["Apple", 1], ["Mango", 2]].each do |fruit| %>
      <%= c.with_option(value: fruit.last, text: fruit.first) %>
    <% end %>
  <% end %>

  <div class="mt-3 d-flex align-items-center justify-content-end">
    <button type="reset" class="btn btn-secondary">Reset</button>
    <%= f.submit "Submit", class: "btn btn-primary ml-2" %>
  </div>
<% end %>
