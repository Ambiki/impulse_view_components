<%= impulse_form_with model: Impulse::SelectComponentPreview::User.new(fruit_id: 2), url: "/users" do |f| %>
  <%= f.label :fruit_id, "Select a fruit" %>
  <%= f.select :fruit_id, [["Mango", 1], ["Banana", 2], ["Strawberry", 3]] %>

  <div class="mt-3 d-flex align-items-center justify-content-end">
    <button type="reset" class="btn btn-secondary">Reset</button>
    <%= f.submit "Submit", class: "btn btn-primary ml-2" %>
  </div>
<% end %>
